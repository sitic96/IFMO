        <Label Content="Конечное значение x:" HorizontalAlignment="Left" Margin="253,173,0,0" VerticalAlignment="Top" Width="169"/>
        <Slider x:Name="end_x" Height="30"
        	TickPlacement="BottomRight" TickFrequency="100"
