        <Label Content="Точность:" HorizontalAlignment="Left" Margin="61,106,0,0" VerticalAlignment="Top" Width="120"/>
        <Slider x:Name="slider_x" Height="30"
                TickPlacement="BottomRight" TickFrequency="100"
